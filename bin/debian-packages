#!/bin/sh
# Run as root or with sudo

# Packages for setting up base Debian installs
apt-get install -y vim-gtk meld subversion git linux-headers-amd64 python-gpgme libzmq3 libzmq3-dev python3-dev exuberant-ctags

# ASKAPsoft packages for Debian 7 and 8
apt-get install -y scons flex bison ant ant-optional unzip bzip2 build-essential gcc g++ gfortran openjdk-7-jdk openjdk-7-doc openmpi-bin libopenmpi-dev libfreetype6-dev libpng12-dev python-dev junit

# Extra packages
apt-get install -y dropbox

# install curl virtualenvwrapper
apt-get install -y curl virtualenvwrapper

# install as workaround for https://github.com/matplotlib/matplotlib/issues/3029/
apt-get install -y pkg-config

# install python development packages and g++
apt-get install -y python3-dev g++

# install dependencies for scipy
apt-get install -y libblas-dev liblapack-dev gfortran

# install some dependencies for matplotlib
apt-get install -y libfreetype6-dev libpng12-dev libjpeg62-turbo-dev
