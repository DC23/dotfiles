#Possible colors: red, green, yellow, blue, magenta, cyan and white.

# custom log4j scheme with different log levels as different colors
# Not called log4j as there is a default scheme of that name
colorscheme:l4j
cs_re:yellow:\[.*\]
cs_re:white,red,bold:.*FATAL.*
cs_re:red,white,bold:.*ERROR.*
cs_re:yellow,,bold:.*WARN
cs_re:yellow:.*WARN.*
cs_re:cyan,,bold:.*INFO
cs_re:cyan:.*INFO.*
cs_re:green,,bold:.*DEBUG
cs_re:green:.*DEBUG.*
# highlight just the word "error" regardless of which line it is in
cs_re:red:(ERROR|Error|error)[S|s]?

# Pick default screen 
defaultcscheme:l4j

# whether to abbreviate filesizes to xKB/MB/GB
abbreviate_filesize:on

# Turn off mail check
check_mail:0
