#!/bin/bash
# Script for creating an up to date Scientific Python stack in a virtual environment on Debian.
# Debian system packages are ancient.
# Do not run as root.
# Requires (but does not test) that the debian-packages script has already been executed.

# activate the virtualenvwrapper aliases
source /usr/share/virtualenvwrapper/virtualenvwrapper.sh

# create and activate virtual environment using mkvirtualenv wrapper (env name is scipy)
mkvirtualenv --no-setuptools --python /usr/bin/python3 scipy

# install fresh pip
curl https://bootstrap.pypa.io/get-pip.py | python

# install fresh setuptools
pip install setuptools distribute

# install numpy as it is dependency for many others
pip install numpy

# install scientific packages
pip install sympy scipy seaborn pandas jupyter matplotlib

# install scikit-learn separately, it depends on numpy and scipy
#pip install scikit-learn

# deactivate venv
#deactivate
