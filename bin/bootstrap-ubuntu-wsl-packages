#!/bin/sh
# Run as root or with sudo

OPTS="--yes"
#OPTS=$OPTS" --dry-run"

apt install $OPTS \
    vim-gtk3 \
    meld \
    git \
    chromium-browser \
    keychain \
    exuberant-ctags \
    fonts-inconsolata \
    ttf-dejavu \
    fonts-liberation \
    tree \
    astyle \
    python3-dev \
    python3-pip \
    python3-virtualenv \
    virtualenvwrapper

# Suggested packages
apt install $OPTS \
    xdg-utils \
    libdpkg-perl \
    dpkg-dev \
    glibc-doc \
    db5.3-util \
    libapache2-mod-svn \
    subversion-tools

# XFCE
apt install $OPTS \
    xfce4 \
    xfce4-whiskermenu-plugin \
    arc-theme
