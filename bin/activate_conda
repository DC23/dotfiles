#!/bin/bash

if [[ "${BASH_SOURCE[0]}" == "${0}" ]] ; then
    echo "You must source this script"
    exit
fi

# utility function to test whether a given command exists
command_exists () {
    command -v $1 >/dev/null 2>&1 ;
}

#override the Python modules with Anaconda
export PATH=$CONDA_INSTALL_DIR/bin:$PATH

if command_exists conda ; then
    echo Now using Python: `which python`
else
    echo ---- You need to install Anaconda, and set the CONDA_INSTALL_DIR variable to the install directory
fi
