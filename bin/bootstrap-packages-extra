#!/bin/sh

# make sure we have the key required for installing pacaur/cower
gpg --keyserver hkp://pool.sks-keyservers.net --recv-key 1EB2638FF56C0C53

yaourt -Syu

# Extra apps I use on desktops but not VMs
yaourt --needed -S dropbox chromium keepass

# Common tools from Aur
yaourt --needed -S pycharm-community
yaourt --needed -S pacaur 

# Chess apps from Aur
#yaourt --needed -S stockfish scid_vs_pc

# Other Aur apps
yaourt --needed -S vertex-themes

if [ ! -f "$HOME/.conkyrc" ]; then
    cp ~/skel/conky/conkyrc-2core ~/.conkyrc
fi
