#!/bin/sh
# Run as root or with sudo

# Packages for setting up base Debian installs
apt-get install -y vim-gtk meld subversion linux-headers-amd64 python-gpgme python3-dev exuberant-ctags terminator fonts-inconsolata ttf-dejavu fonts-liberation tree clang-format astyle

# Base dev packages
apt-get install -y unzip bzip2 build-essential gcc g++ gfortran openjdk-8-jdk openjdk-8-doc libfreetype6-dev libpng-dev python-dev python3-dev autoconf

# Extra ASKAPsoft packages for Debian 7 and 8
apt-get install -y autoconf subversion scons flex bison ant ant-optional unzip bzip2 build-essential gcc g++ gcc-6-plugin-dev gfortran openmpi-bin libopenmpi-dev libfreetype6-dev libpng-dev python-dev libatlas-base-dev libatlas-dev

# install curl & virtualenvwrapper
apt-get install -y curl virtualenvwrapper

# install as workaround for https://github.com/matplotlib/matplotlib/issues/3029/
apt-get install -y pkg-config

# extra dependencies for scipy
apt-get install -y libblas-dev liblapack-dev libjpeg62-turbo-dev

# Extra packages that I may not always want
#apt-get install -y dropbox
